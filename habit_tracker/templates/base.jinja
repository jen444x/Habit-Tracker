{% from "macros.jinja" import button %}
<!DOCTYPE html>
<!-- html is root element -->
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width initial-scale=1.0" />
    <!-- <title>Habit Tracker</title> -->
    <title>{% block title %}{% endblock %} - Habit Tracker</title>

    {# styling #}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/tailwind.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/style.css') }}">

    {# fonts #}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Delius&display=swap"
      rel="stylesheet"
    />

    {# icons #}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    
  </head>
  <body class="w-full h-dvh {% block body_class %}{% endblock %}">
    {% for message in get_flashed_messages() %}
      <div class="bg-calm-500 text-white px-4 py-2 rounded-xl mb-4 shadow">{{ message }}</div>
    {% endfor %}

    <section class="flex flex-col pt-4 pb-22 max-w-2xl mx-auto px-6">
      <header>
        {% block header %}{% endblock %}
      </header>

      {% block content %}{% endblock %}
    </section>

    <nav class="fixed bottom-0 left-0 right-0 overscroll-none bg-calm-600 shadow-lg">
      {% if g.user %}
        <div class="flex justify-around items-center py-4 pb-7 text-center text-white">
          <a href="{{ url_for('challenges.index') }}" class="flex-1 flex flex-col items-center gap-1 py-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <span class="text-sm font-medium">Challenges</span>
          </a>
          <a href="{{ url_for('dashboard.index') }}" class="flex-1 flex flex-col items-center gap-1 py-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm font-medium">Habits</span>
          </a>
          <a href="{{ url_for('auth.logout') }}" class="flex-1 flex flex-col items-center gap-1 py-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            <span class="text-sm font-medium">Log Out</span>
          </a>
        </div>
      {% endif %}
    </nav>

    <!-- Use async here so it the following line doesn't have to wait -->
    <script async src="{{ url_for('static', filename = 'main.js') }}"></script>
  </body>
</html>
