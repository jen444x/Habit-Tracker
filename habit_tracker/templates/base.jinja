{% from "macros.jinja" import button %}
<!DOCTYPE html>
<!-- html is root element -->
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width initial-scale=1.0" />
    <!-- <title>Habit Tracker</title> -->
    <title>{% block title %}{% endblock %} - Habit Tracker</title>

    {# styling #}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/tailwind.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/style.css') }}">

    {# fonts #}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Delius&display=swap"
      rel="stylesheet"
    />

    {# icons #}
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />

  </head>
  <body class="w-full h-dvh {% block body_class %}{% endblock %}">
    {% for message in get_flashed_messages() %}
      <div class="bg-calm-500 text-white px-4 py-2 rounded-xl mb-4 shadow">{{ message }}</div>
    {% endfor %}

    {% block view %}{% endblock %}

    <section class="flex flex-col px-8 pt-8 pb-22">
      <header class="w-3/4 mx-auto" >
        {% block header %}{% endblock %}
      </header>
  
      {% block content %}{% endblock %}
    </section>

    <nav class="fixed bottom-0 left-0 right-0 overscroll-none bg-calm-600 shadow-lg/30">
      {% if g.user %}
        <div class="flex justify-around items-stretch divide-x-1 my-4 text-center text-white">
          <div class="flex-1">
            <a 
            href="{{ url_for('dashboard.index') }}" 
            class= "text-xl font-medium">
              Home
            </a>
          </div> 
          <div class="flex-1 ">
            <a 
            href="{{ url_for('auth.logout') }}" 
            class= "text-xl font-medium">
              Log Out
            </a>
          </div>
        </div>
      {% endif %}
    </nav>

    <!-- Use async here so it the following line doesn't have to wait -->
    <script async src="{{ url_for('static', filename = 'main.js') }}"></script>
  </body>
</html>
