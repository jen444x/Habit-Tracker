{% extends 'base.jinja' %}

{% block header %}
  <div class="w-full flex flex-col gap-6">
    <h1>{% block title %}Habits{% endblock %}</h1>
  </div>
{% endblock %}

{% block content %}
  {% if g.user %}
    <div class="flex justify-start">
      <a class="bg-calm-600 hover:bg-calm-500 text-white p-6 rounded font-bold cursor-pointer text-3xl shadow-lg/30" href="{{ url_for('dashboard.create') }}">
        + New Habit
      </a>
    </div>

    <div class="flex flex-col gap-6 my-8">
    {% for habit in habits %}
      <div class="bg-white rounded-xl p-6 shadow-lg/30 border-3 border-calm-500">
        <div class="flex justify-between gap-4 mb-4">
          <h3 class="font-black text-3xl text-calm-600">{{ habit['title'] }}</h3>
          <a class="text-calm-500 hover:text-calm-600 font-bold cursor-pointer text-xl mt-2" href="{{ url_for('dashboard.update', id=habit['id']) }}">Edit</a>
        </div>
        <p class="text-lg text-calm-600 font-sans font-light">{{ habit['body'] }}</p>
      </div>
    {% endfor %}
    </div>
  {% endif %}
{% endblock %}


